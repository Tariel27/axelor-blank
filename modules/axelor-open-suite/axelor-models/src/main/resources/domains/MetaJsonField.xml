<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">

  <module name="meta" package="com.axelor.meta.db"/>

  <entity name="MetaJsonField" table="META_JSON_FIELD">
    <boolean name="isSelectionField"/>
    <string name="uniqueModel">
    	<![CDATA[
    		if (jsonModel != null) {
    			return model + " " + jsonModel.getName();
    		}
    		return model;
    	]]>
    </string>
    <boolean name="isAutoGenerated" default="false"/>
    <string name="sequenceInfo">
      <![CDATA[
          if (!isAutoGenerated && !("string").equals(type.toLowerCase())) {
            return "";
          }
          String format = "prefix=\"%s\" suffix=\"%s\" initial=\"%s\" increment=\"%s\" padding=\"%s\"";
          return String.format(format, prefix, suffix, initialValue, sequenceIncrement, padding);
      ]]>
    </string>
    <string name="prefix" title="Prefix"/>
    <string name="suffix" title="Suffix"/>
    <integer name="initialValue" title="Count from" default="0"/>
    <integer name="sequenceIncrement" title="Increment" default="1"/>
    <integer name="padding" title="Amount of numbers" default="5"/>

    <boolean name="isSearchField" default="false"/>
    <string name="searchFields"/>
  </entity>

</domain-models>
